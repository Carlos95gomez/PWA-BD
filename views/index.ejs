  <div class="container mt-1">
    <div class="row justify-content-center">
      <div class="col-md-5">
        <form id="loginForm" class="d-none my-4 border rounded position-relative" method="post" action="/login">
          <button type="button" class="btn-close position-absolute top-0 end-0 m-3" aria-label="Close"></button>
          <div class="mb-3">
            <label for="login_correo_electronico" class="form-label">Dirección de correo electrónico</label>
            <input type="email" class="form-control" id="login_correo_electronico" name="correo_electronico" aria-describedby="emailHelp" required>          
            <div id="emailHelp" class="form-text">Nunca compartiremos su correo electrónico con nadie más.</div>
          </div>
          <div class="mb-3">
            <label for="login_contrasena" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="login_contrasena" name="contrasena" required>
          </div>
          <div class="mb-3">
           <a href="/cambiarclave">¿Olvidó su contraseña?</a>
          </div>
          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Recibir Notificaciones</label>
          </div>
          <button type="submit" class="btn btn-primary"><em>Iniciar Sesión</em></button>
        </form>
      </div>
    </div>
  </div>
 
<div class="container mt-1">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <form id="registerForm" class="d-none my-4 border rounded needs-validation position-relative" novalidate method="POST" action="/register">
        <button type="button" class="btn-close position-absolute top-0 end-0 m-3" aria-label="Close" onclick="toggleForm('registerForm')"></button>
        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre</label>
          <input type="text" class="form-control" id="nombre" name="nombre" required>
          <div class="invalid-feedback">
            Por favor, ingresa tu nombre.
          </div>
        </div>
        <div class="mb-3">
          <label for="correo_electronico" class="form-label">Correo Electrónico</label>
          <input type="email" class="form-control" id="correo_electronico" name="correo_electronico" required>
          <div class="invalid-feedback">
            Por favor, ingresa un correo electrónico válido.
          </div>
        </div>
        <div class="mb-3">
          <label for="contrasena" class="form-label">Contraseña</label>
          <input type="password" class="form-control" id="contrasena" name="contrasena" required>
          <div class="invalid-feedback">
            Por favor, ingresa una contraseña.
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Crear cuenta</button>
      </form>
    </div>
  </div>
</div>
    

